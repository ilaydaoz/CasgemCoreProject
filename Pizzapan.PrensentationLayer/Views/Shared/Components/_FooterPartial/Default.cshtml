@model List<Pizzapan.EntityLayer.Concrete.Contact>
<section class="w3l-footers-20">
    <div class="footers20">
        <div class="container">
            <div class="footers20-content">
                @foreach (var item in Model)
                {
                    <div class="d-grid grid-col-4 grids-content">
                        <div class="column">
                            <h4>Addres</h4>
                           
                            <p class="contact-para3">@item.Address</p>
                            <a href="mailto:hello@w3layouts.com">
                                <p class="contact-mail mt-2"></p>
                            </a>
                        </div>
                        <div class="column">
                            <h4>İletişim</h4>
                          <p class="contact-para3">@item.Email</p>
                            <a href="@item.Number">
                                <p class="contact-phone mt-2">@item.Number</p>
                            </a>
                        </div>
                        <div class="column">
                            <h4>Açılış Kapanış saati</h4>
                            <p>Her Haftaiçi</p>
                            <p class="mt-2">@item.OpeningHours</p>
                        </div>
                        <div class="column">
                            <h4>Twitter feed</h4>
                            <a href="blog-single.html">
                                <p>
                                    <span class="fa fa-twitter mr-2"></span>Eating hot spicy pizza is the best thing to consider
                                </p>
                            </a>
                            <p class="small mt-2"><span class="fa fa-clock-o"></span> March 25, 2020</p>
                        </div>
                    </div>
                    <div class="d-grid grid-col-3 grids-content1 bottom-border">
                        <div class="columns copyright-grid">
                            <p class="copy-footer-29">
                                © 2020 Pizza Pan. All rights reserved | Designed by <a href="https://w3layouts.com">W3layouts</a>
                            </p>
                        </div>
                        <div class="columns text-right social-grid">
                            <ul class="social">
                                <li><a href="#url"><span class="fa fa-facebook" aria-hidden="true"></span></a></li>
                                <li><a href="#url"><span class="fa fa-instagram" aria-hidden="true"></span></a></li>
                                <li><a href="#url"><span class="fa fa-twitter" aria-hidden="true"></span></a></li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
