@model Pizzapan.EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Ürün ekleme</h1>
<form method="post">

    <label>ürün adı</label>
    <input asp-for="Name" class="form-control" style="background-color:brown" />
    <br />
    <label>ürün fiyarı</label>
    <input asp-for="Price" class="form-control" style="background-color:brown" />
    <br />
    <label>ürün kategori</label>
    <input asp-for="CategoryID" class="form-control" style="background-color:brown" />
    <br />
    <label>ürün görseleri</label>
    <input asp-for="ImageUrl" class="form-control" style="background-color:brown" />
    <br />
    <label>ürün açıklaması</label>
    <input asp-for="Description" class="form-control" style="background-color:brown" />
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
